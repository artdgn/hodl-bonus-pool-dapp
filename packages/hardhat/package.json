  "scripts": {
    "chain": "hardhat node --network hardhat --no-deploy",
    "fork": "hardhat node --no-deploy --network hardhat --fork https://mainnet.infura.io/v3/c71ef0dddc9e48c38f6ed7d41e5ef0c8",
    "test": "hardhat test --network hardhat",
    "compile": "hardhat compile",
    "deploy": "hardhat deploy --export-all ../react-app/src/contracts/hardhat_contracts.json",
    "postdeploy": "hardhat run scripts/publish.js",
    "watch": "node scripts/watch.js",
    "accounts": "hardhat accounts",
    "balance": "hardhat balance",
    "send": "hardhat send",
    "generate": "hardhat generate",
    "account": "hardhat account",
    "gas-report": "yarn compile && REPORT_GAS=True yarn test test/*.js",
    "install-slither": "python3 -m venv .venv && . .venv/bin/activate && pip install slither-analyzer",
    "slither": ".venv/bin/python -m slither . --exclude incorrect-equality,timestamp,solc-version --filter-paths 'openzeppelin|tokens' --disable-color 2>&1 | tee slitherReport.txt ",
    "etherscan-verify": "hardhat etherscan-verify --api-key PSW8C433Q667DVEX5BCRMGNAH9FSGFZ7Q8"
